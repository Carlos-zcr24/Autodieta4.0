@model AutodietaSemanal.Models.LoginViewModel


@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h3>🥗 Autodieta Semanal</h3>
                    <p class="mb-0">Iniciar Sesión</p>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                Por favor, completa todos los campos correctamente.
                            </div>
                        }

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="NombreUsuario" class="form-label"></label>
                            <input a
                            <!--- <input type="text" name="NombreUsuario" class="form-control" /> -->
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contraseña" class="form-label"></label>
                            <input type="password" name="Contraseña" class="form-control" />

                            <span asp-validation-for="Contraseña" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                        </div>
                    </form>
                    
                    
                    <div class="text-center mt-3">
                        <p>¿No tienes cuenta? <a href="@Url.Action("Register", "Account")">Regístrate aquí</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
