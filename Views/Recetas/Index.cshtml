@model IEnumerable<AutodietaSemanal.Models.Receta>
@{
    ViewData["Title"] = "Recetas";
    Layout = "_Layout";
}

<h2>Recetas</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar nueva receta</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo de comida</th>
            <th>Comida libre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.TipoComida</td>
                <td>@(item.EsComidaLibre ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>