@model AutodietaSemanal.Models.Receta
@{
    ViewData["Title"] = "Editar Receta";
    Layout = "_Layout";
}

<h2>Editar Receta</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ingredientes" class="control-label"></label>
        <textarea asp-for="Ingredientes" class="form-control"></textarea>
        <span asp-validation-for="Ingredientes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TipoComida" class="control-label"></label>
        <select asp-for="TipoComida" class="form-control" asp-items="@(new SelectList(Enum.GetValues(typeof(AutodietaSemanal.Models.TipoComida)), Model.TipoComida))"></select>
        <span asp-validation-for="TipoComida" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="EsComidaLibre" class="form-check-input" />
        <label asp-for="EsComidaLibre" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>